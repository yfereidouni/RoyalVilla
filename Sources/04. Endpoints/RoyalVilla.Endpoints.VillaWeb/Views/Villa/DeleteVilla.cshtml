@using RoyalVilla.Endpoints.VillaWeb.Models.DTOs

@model VillaDTO

<form asp-controller="Villa" asp-action="DeleteVilla" method="post">
    <div class="container p-3">
        <h1 class="text-primary">Delete Villa</h1>

        <hr />
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="Name" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-2">
                <input asp-for="Name" disabled class="form-control" />
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>

            <div class="col-2">
                <label asp-for="Rate" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-2">
                <input asp-for="Rate" disabled class="form-control" />
                @*<span asp-validation-for="Rate" class="text-danger"></span>*@
            </div>

            <div class="col-2">
                <label asp-for="Details" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-2">
                <textarea asp-for="Details" disabled class="form-control" rows="5"></textarea>
                @*<span asp-validation-for="Details" class="text-danger"></span>*@
            </div>

            <div class="col-2">
                <label asp-for="ImageUrl" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-2">
                <input asp-for="ImageUrl" disabled class="form-control" />
                @*<span asp-validation-for="ImageUrl" class="text-danger"></span>*@
            </div>

            <div class="col-2">
                <label asp-for="Occupancy" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-2">
                <input asp-for="Occupancy" disabled class="form-control" />
                @*<span asp-validation-for="Occupancy" class="text-danger"></span>*@
            </div>

            <div class="col-2">
                <label asp-for="Sqft" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-2">
                <input asp-for="Sqft" disabled class="form-control" />
                @*<span asp-validation-for="Sqft" class="text-danger"></span>*@
            </div>

            <div class="col-2">
                <label asp-for="Amenity" class="control-lable pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-2">
                <textarea asp-for="Amenity" disabled class="form-control" rows="5"></textarea>
                @*<span asp-validation-for="Amenity" class="text-danger"></span>*@
            </div>

            <div class="col-5 offset-2">
                <a asp-controller="Villa" asp-action="IndexVilla" class="btn btn-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}